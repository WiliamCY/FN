<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar" />


    <EditText
        android:textColorHint="@color/c999999"

        android:id="@+id/e1"

        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_55"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/paddingTop_15"
          android:layout_marginRight="@dimen/marginRight_16"
        android:background="@drawable/shape_conss"
        android:textSize="@dimen/text_size_15"
        android:hint="            请输入4-24个字符，但不包括等无效字符"
        app:layout_constraintTop_toBottomOf="@id/tool_bar" />


    <EditText
        android:visibility="gone"
        android:id="@+id/e2"
        android:gravity="left"
        android:textColorHint="@color/c999999"
        android:layout_width="match_parent"
        android:layout_height="178dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="@dimen/paddingTop_15"
        android:layout_marginRight="16dp"
        android:background="@drawable/shape_conss"
        android:textSize="@dimen/text_size_15"
        android:hint="请输入您的个性介绍，100个字以内"
        app:layout_constraintTop_toBottomOf="@id/tool_bar" />


    <Button
        android:id="@+id/fixNickName"
        android:layout_marginBottom="@dimen/marginBottom_60"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/cffffff"
        android:text="确定"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:background="@drawable/shape_red_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_40" />

</android.support.constraint.ConstraintLayout>