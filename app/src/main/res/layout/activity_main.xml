<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ViewStub
        android:id="@+id/vb_mian_show"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout="@layout/toolbar" />

    <RelativeLayout
        android:id="@+id/r1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#fff">

        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/nihao">

        </FrameLayout>


        <View
            android:id="@+id/nihao"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_above="@+id/rg_oper"
            android:background="@color/stroke_line" />


            <RadioGroup
            android:id="@+id/rg_oper"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rd_analysis"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
               android:layout_marginTop="@dimen/marginTop_2"
                android:layout_weight="1"
                android:background="#fff"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/tab_find"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="发现"
                android:textColor="@color/color_radiobutton"
                android:textSize="@dimen/text_size_12" />

            <RadioButton
                android:layout_marginTop="@dimen/marginTop_2"
                android:id="@+id/rd_educationadmin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:button="@null"
                android:drawableTop="@drawable/tab_shop"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="藏宝阁"
                android:textColor="@color/color_radiobutton"
                android:textSize="@dimen/text_size_12" />


            <RadioButton
                android:id="@+id/img_protruding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginTop_5"
                android:layout_weight="1"
                android:background="#fff"
                android:button="@null"
                android:drawableTop="@mipmap/photos"
                android:drawablePadding="3dp"
                android:gravity="center" />

            <RadioButton
                android:layout_marginTop="@dimen/marginTop_2"
                android:id="@+id/rd_finance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#fff"
                android:button="@null"
                android:drawableTop="@drawable/tab_message"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="藏友圈"
                android:textColor="@color/color_radiobutton"
                android:textSize="@dimen/text_size_12" />

            <RadioButton
                android:layout_marginTop="@dimen/marginTop_2"
                android:id="@+id/rd_me"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#fff"
                android:button="@null"
                android:drawableTop="@drawable/tab_my"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="我的"
                android:textColor="@color/color_radiobutton"
                android:textSize="@dimen/text_size_12" />
        </RadioGroup>


    </RelativeLayout>

</LinearLayout>