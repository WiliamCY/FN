<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/margin_10"
    tools:ignore="MissingConstraints">

    <ImageView
        android:id="@+id/message_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="@dimen/layout_width_50"
        android:layout_height="@dimen/layout_height_50"
        android:background="@mipmap/my_message_logo"
 />
    <TextView
        android:textColor="@color/c999999"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-10-8  12:00"/>
    <TextView
        android:text="新活动已经更新了！今天你看了吗？精
彩内容不容错过！"
        android:background="@drawable/shape"
        android:layout_marginLeft="@dimen/marginLeft_20"
        android:layout_width="283dp"
        android:layout_height="68dp"
        android:textColor="@color/c333333"
        android:textSize="@dimen/text_size_15"
        android:layout_marginTop="@dimen/paddingTop_10"
        app:layout_constraintTop_toBottomOf="@id/message_time"
        app:layout_constraintLeft_toRightOf="@id/message_logo"/>
</android.support.constraint.ConstraintLayout>