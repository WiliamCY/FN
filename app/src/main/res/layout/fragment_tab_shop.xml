<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:paddingBottom="8dp"
        android:orientation="horizontal"
        android:id="@+id/user_toolbar"
        android:background="@color/cffffff"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_60">
        <ImageView

            android:visibility="invisible"
            android:id="@+id/back"
            android:layout_gravity="bottom"
            android:src="@mipmap/back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            />
        <TextView

            android:textSize="20sp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textColor="@color/c333333"
            android:text="商城"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
       android:paddingTop="@dimen/marginTop_20"
        android:background="@color/cEEEEEE"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:id="@+id/image"
        android:layout_width="343dp"
        android:layout_height="186dp"
        android:background="@mipmap/s_q"
      />

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_marginTop="@dimen/paddingTop_10"
       app:layout_constraintTop_toBottomOf="@id/image"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        
        <LinearLayout
            android:layout_marginLeft="@dimen/paddingLeft_10"
            android:layout_marginRight="@dimen/paddingRight_5"
            android:background="@color/cEEEEEE"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:background="@mipmap/q"
                android:layout_width="40dp"
                android:layout_height="40dp" />
   <TextView
       android:textSize="@dimen/text_size_12"
       android:textColor="@color/c333333"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="瓷器"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/paddingLeft_5"
            android:layout_marginRight="@dimen/paddingRight_5"
            android:background="@color/cEEEEEE"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:background="@mipmap/w"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/c333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="陶器"/>

        </LinearLayout>


        <LinearLayout
            android:layout_marginLeft="@dimen/paddingLeft_5"
            android:layout_marginRight="@dimen/paddingRight_5"
            android:background="@color/cEEEEEE"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:background="@mipmap/e"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <TextView
                android:textSize="@dimen/text_size_12"
                android:textColor="@color/c333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="铜器"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="@dimen/paddingLeft_5"
            android:layout_marginRight="@dimen/paddingRight_5"
            android:background="@color/cEEEEEE"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
