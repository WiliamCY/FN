                android:textSize="@dimen/text_size_12"
                android:textColor="@color/c333333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="玉器"/>

        </LinearLayout>



    </LinearLayout>







    <ImageView
