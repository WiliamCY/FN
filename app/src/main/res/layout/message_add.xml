<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/user_toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/c313131"
        android:paddingBottom="8dp"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/marginLeft_10"
            android:src="@mipmap/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="发布"
            android:textColor="@color/cffffff"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/back" />

    </android.support.constraint.ConstraintLayout>

    <EditText
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="285dp"
        android:layout_margin="@dimen/margin_10"
        android:background="@null"
        android:gravity="top|left"
        android:hint="快把你的想法拿出来晒晒吧～"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/user_toolbar" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_margin="@dimen/margin_10"
        android:background="@color/cEEEEEE"
        app:layout_constraintTop_toBottomOf="@id/title" />

    <!--<ImageView-->
    <!--app:layout_constraintLeft_toLeftOf="parent"-->
    <!--android:layout_marginLeft="@dimen/marginLeft_10"-->
    <!--android:id="@+id/user_logos"-->
    <!--app:layout_constraintTop_toTopOf="@id/add_image"-->
    <!--android:layout_width="111dp"-->
    <!--android:layout_height="111dp"-->
    <!--android:background="@mipmap/finder_logo"/>-->

<LinearLayout
    android:layout_marginTop="@dimen/paddingTop_10"
    app:layout_constraintTop_toBottomOf="@id/view1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <android.support.v7.widget.RecyclerView
        android:id="@+id/r1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paddingTop_10"
         />
<android.support.constraint.ConstraintLayout
    android:id="@+id/c1"
    android:layout_marginLeft="@dimen/marginLeft_10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:paddingLeft="@dimen/marginLeft_10"
        android:id="@+id/add_image"
        android:layout_width="111dp"
        android:layout_height="111dp"
        android:layout_marginLeft="@dimen/marginLeft_10"
        android:layout_marginRight="@dimen/marginRight_16"
        android:background="@mipmap/r_add"
   />

    <TextView
        android:id="@+id/imageViewNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paddingTop_10"
        android:text="0/9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintTop_toBottomOf="@id/add_image" />
</android.support.constraint.ConstraintLayout>
</LinearLayout>

