<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="116dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="4dp"
    android:layout_margin="@dimen/margin_16">

<LinearLayout
    android:layout_gravity="center"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<LinearLayout
    android:id="@+id/lay1"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="0dp"
    android:layout_height="match_parent">
       <ImageView
           android:layout_width="@dimen/layout_width_25"
           android:layout_height="@dimen/layout_height_25"
           android:background="@mipmap/m_1"/>
    <TextView
        android:layout_marginTop="@dimen/marginTop_14"
        android:textColor="@color/c333333"
        android:textSize="@dimen/text_size_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="资料库"/>
</LinearLayout>


    <LinearLayout
        android:id="@+id/lay2"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/layout_width_25"
            android:layout_height="@dimen/layout_height_25"
            android:background="@mipmap/m_2"/>
        <TextView
            android:layout_marginTop="@dimen/marginTop_14"
            android:textColor="@color/c333333"
            android:textSize="@dimen/text_size_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay3"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/layout_width_25"
            android:layout_height="@dimen/layout_height_25"
            android:background="@mipmap/m_3"/>
        <TextView
            android:layout_marginTop="@dimen/marginTop_14"
            android:textColor="@color/c333333"
            android:textSize="@dimen/text_size_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的鉴定"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lay4"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/layout_width_25"
            android:layout_height="@dimen/layout_height_25"
            android:background="@mipmap/m_4"/>
        <TextView
            android:layout_marginTop="@dimen/marginTop_14"
            android:textColor="@color/c333333"
            android:textSize="@dimen/text_size_15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"/>
    </LinearLayout>


</LinearLayout>



</android.support.v7.widget.CardView>