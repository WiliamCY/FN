<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/layout_width_82"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    android:layout_margin="@dimen/margin_5"
    android:layout_height="@dimen/layout_height_82">
  <ImageView
      android:scaleType="fitXY"
      android:id="@+id/image_adapter"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      />
  <ImageView
      android:id="@+id/image_delete"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_margin="@dimen/margin_3"
      app:layout_constraintRight_toRightOf="@id/image_adapter"
      android:layout_width="@dimen/layout_width_15"
      android:layout_height="@dimen/layout_height_15"
      android:background="@mipmap/image_delete"/>
  <TextView
      android:id="@+id/image_title"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_margin="@dimen/margin_5"
      app:layout_constraintBottom_toBottomOf="parent"
      android:textColor="@color/cffffff"
      android:text="封面"
      android:textSize="@dimen/text_size_10"
      android:gravity="center"
      android:layout_width="31dp"
      android:layout_height="13dp"
      android:background="@drawable/shape_image"/>

</android.support.constraint.ConstraintLayout>