<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin_15"
    tools:context=".ui.activity.ChangeMobile"
    tools:ignore="MissingConstraints">


    <TextView
        android:paddingTop="@dimen/paddingTop_30"
        android:id="@+id/cm_title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原手机号码"
        android:textColor="@color/c333333"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:paddingTop="@dimen/paddingTop_30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginLeft_40"
        android:text="138*****9266"
        android:textColor="@color/c333333"
        android:textSize="@dimen/text_size_15"
        app:layout_constraintLeft_toRightOf="@id/cm_title1" />


    <TextView
        android:id="@+id/cm_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paddingTop_30"
        android:text="新原手机号码"
        android:textColor="@color/c333333"
        android:textSize="@dimen/text_size_15"
        app:layout_constraintTop_toBottomOf="@id/cm_title1" />

    <TextView
        android:id="@+id/cm_title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginLeft_40"
        android:text="+86"
        android:textColor="@color/c333333"
        android:textSize="@dimen/text_size_15"
        app:layout_constraintLeft_toRightOf="@id/cm_title2"
        app:layout_constraintTop_toTopOf="@id/cm_title2" />

    <EditText
        android:layout_marginLeft="@dimen/marginLeft_20"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入新的手机号"
        android:textColor="@color/c333333"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/cm_title3"
        app:layout_constraintLeft_toRightOf="@id/cm_title3" />


    <TextView
        android:id="@+id/cm_title4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/paddingTop_30"
        android:text="验证码"
        android:textColor="@color/c333333"
        android:textSize="@dimen/text_size_15"
        app:layout_constraintTop_toBottomOf="@id/cm_title3" />


    <EditText
        android:layout_marginLeft="@dimen/marginLeft_20"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="请输入验证码"
        android:textColor="@color/c333333"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@id/cm_title4"
        app:layout_constraintLeft_toRightOf="@id/cm_title4" />
    <TextView
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cm_title4"
        android:gravity="center_vertical"
        android:textSize="@dimen/text_size_12"
        android:textColor="@color/cffffff"
        android:text="获取验证码"
        android:layout_width="79dp"
        android:layout_height="24dp"
        android:background="@drawable/shape_bule"/>


    <Button
        android:layout_marginBottom="@dimen/paddingBottom_40"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/c_login_button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_36"
        android:background="@drawable/shape_red"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/cffffff"
        android:textSize="@dimen/text_size_15"
      />

</android.support.constraint.ConstraintLayout>