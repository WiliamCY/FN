<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".ui.activity.NoticeSetting">
    <include
        android:id="@+id/toolbar"
         layout="@layout/toolbar"/>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="@dimen/margin_15"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_60">
        <TextView
            android:id="@+id/titl1"
            android:textColor="@color/c333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_15"/>
        <TextView
            android:layout_marginTop="@dimen/marginTop_10"
           android:layout_below="@id/titl1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="官方系统通知的消息等是否通知"/>
        <ImageView
            android:layout_marginRight="@dimen/paddingRight_6"
            android:layout_marginTop="@dimen/paddingTop_10"
            android:layout_alignParentRight="true"
            android:background="@mipmap/close_button"
            android:layout_width="@dimen/layout_width_30"
            android:layout_height="@dimen/layout_height_18" />
    </RelativeLayout>

        <View
            android:layout_marginTop="@dimen/marginTop_5"
            android:layout_marginBottom="@dimen/marginBottom_5"
            android:background="@color/cEEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    <RelativeLayout

        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_60">
        <TextView
            android:id="@+id/titl2"
            android:textColor="@color/c333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="鉴定，证书，保险反馈"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_15"/>
        <TextView
            android:layout_marginTop="@dimen/marginTop_10"
            android:layout_below="@id/titl2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="藏品鉴定流程，证书，保险申请反馈"/>
        <ImageView
            android:layout_marginRight="@dimen/paddingRight_6"
            android:layout_marginTop="@dimen/paddingTop_10"
            android:layout_alignParentRight="true"
            android:background="@mipmap/open_button"
            android:layout_width="@dimen/layout_width_30"
            android:layout_height="@dimen/layout_height_18" />
    </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/marginTop_5"
            android:layout_marginBottom="@dimen/marginBottom_5"
            android:background="@color/cEEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_60">
        <TextView
            android:id="@+id/titl3"
            android:textColor="@color/c333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商城通知"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_15"/>
        <TextView
            android:layout_marginTop="@dimen/marginTop_10"
            android:layout_below="@id/titl3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新上架，打折，物流等商城相关通知"/>
        <ImageView
            android:layout_marginRight="@dimen/paddingRight_6"
            android:layout_marginTop="@dimen/paddingTop_10"
            android:layout_alignParentRight="true"
            android:background="@mipmap/close_button"
            android:layout_width="@dimen/layout_width_30"
            android:layout_height="@dimen/layout_height_18" />
    </RelativeLayout>

        <View
            android:layout_marginTop="@dimen/marginTop_5"
            android:layout_marginBottom="@dimen/marginBottom_5"
            android:background="@color/cEEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_60">
        <TextView
            android:id="@+id/titl4"
            android:textColor="@color/c333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新活动"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_15"/>
        <TextView
            android:layout_marginTop="@dimen/marginTop_10"
            android:layout_below="@id/titl4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="最新的线上，线下活动通知"/>
        <ImageView
            android:layout_marginRight="@dimen/paddingRight_6"
            android:layout_marginTop="@dimen/paddingTop_10"
            android:layout_alignParentRight="true"
            android:background="@mipmap/open_button"
            android:layout_width="@dimen/layout_width_30"
            android:layout_height="@dimen/layout_height_18" />
    </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/marginTop_5"
            android:layout_marginBottom="@dimen/marginBottom_5"
            android:background="@color/cEEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_60">
        <TextView
            android:id="@+id/titl5"
            android:textColor="@color/c333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新增关注"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_15"/>
        <TextView
            android:layout_marginTop="@dimen/marginTop_10"
            android:layout_below="@id/titl5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的藏品等被新用户关注"/>
        <ImageView
            android:layout_marginRight="@dimen/paddingRight_6"
            android:layout_marginTop="@dimen/paddingTop_10"
            android:layout_alignParentRight="true"
            android:background="@mipmap/open_button"
            android:layout_width="@dimen/layout_width_30"
            android:layout_height="@dimen/layout_height_18" />
    </RelativeLayout>

        <View
            android:layout_marginTop="@dimen/marginTop_5"
            android:layout_marginBottom="@dimen/marginBottom_5"
            android:background="@color/cEEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_60">
        <TextView
            android:id="@+id/titl6"
            android:textColor="@color/c333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注状态更新"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_15"/>
        <TextView
            android:layout_marginTop="@dimen/marginTop_10"
            android:layout_below="@id/titl6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我关注的藏品等有新状态更新"/>
        <ImageView
            android:layout_marginRight="@dimen/paddingRight_6"
            android:layout_marginTop="@dimen/paddingTop_10"
            android:layout_alignParentRight="true"
            android:background="@mipmap/close_button"
            android:layout_width="@dimen/layout_width_30"
            android:layout_height="@dimen/layout_height_18" />
    </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/marginTop_5"
            android:layout_marginBottom="@dimen/marginBottom_5"
            android:background="@color/cEEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_60">
        <TextView
            android:id="@+id/titl7"
            android:textColor="@color/c333333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评论（暂无）"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_15"/>
        <TextView
            android:layout_marginTop="@dimen/marginTop_10"
            android:layout_below="@id/titl7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的发表或评论，被其他人评论"/>
        <ImageView
            android:layout_marginRight="@dimen/paddingRight_6"
            android:layout_marginTop="@dimen/paddingTop_10"
            android:layout_alignParentRight="true"
            android:background="@mipmap/open_button"
            android:layout_width="@dimen/layout_width_30"
            android:layout_height="@dimen/layout_height_18" />
    </RelativeLayout>
        <View
            android:layout_marginTop="@dimen/marginTop_5"
            android:layout_marginBottom="@dimen/marginBottom_5"
            android:background="@color/cEEEEEE"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
</LinearLayout>