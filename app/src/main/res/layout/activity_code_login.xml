<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints">

    <LinearLayout

        android:id="@+id/user_toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/c313131"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/paddingLeft_5"
            android:src="@mipmap/back" />

        <TextView
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="商城"
            android:textColor="@color/cffffff"
            android:visibility="invisible" />

    </LinearLayout>
<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:paddingTop="40dp">

        <TextView

            android:id="@+id/title_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="40dp"
            android:text="验证码登录"
            android:textColor="@color/c333333"
            android:textSize="@dimen/text_size_28"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/title_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="44dp"
            android:text="手机号"
            android:textColor="@color/c000000"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/title_1" />

        <TextView
            android:id="@+id/title_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="44dp"
            android:text="+86"
            android:textColor="@color/c1B35FD"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintLeft_toRightOf="@id/title_2"
            app:layout_constraintTop_toBottomOf="@id/title_1" />

        <ImageView
            android:layout_width="11dp"
            android:layout_height="6dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="8dp"
            android:background="@mipmap/down"
            app:layout_constraintLeft_toRightOf="@id/title_3"
            app:layout_constraintTop_toBottomOf="@id/title_1"
            app:layout_constraintTop_toTopOf="@id/title_3" />

        <EditText
            android:id="@+id/c_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="请输入手机号"
            android:inputType="number"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/title_3" />

        <TextView
            android:id="@+id/title_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/drawablePadding_10"
            android:text="验证码"
            android:textColor="@color/c000000"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/c_phone"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/c_getCode"
            android:layout_width="@dimen/layout_width_150"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/drawablePadding_10"
            android:text="获取验证码"
            android:textColor="@color/c333333"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/c_phone" />

        <EditText
            android:id="@+id/c_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="请输入验证码"
            android:inputType="number"
            android:singleLine="true"
            app:layout_constraintTop_toBottomOf="@id/title_4" />

        <TextView
            android:id="@+id/title_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/drawablePadding_10"
            android:text="密码"
            android:textColor="@color/c000000"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/c_code"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/title_6"
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:layout_marginTop="@dimen/drawablePadding_10"
            android:layout_marginRight="20dp"
            android:background="@mipmap/password"
            android:textColor="@color/c333333"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/c_code"
            app:layout_constraintTop_toTopOf="@id/title_5" />

        <ImageView

            android:id="@+id/image_see"
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:layout_marginTop="@dimen/drawablePadding_10"
            android:layout_marginRight="20dp"
            android:background="@mipmap/passwords"
            android:textColor="@color/c333333"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/c_code"
            app:layout_constraintTop_toTopOf="@id/title_5" />


        <EditText
            android:id="@+id/c_passwords"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:visibility="gone"
            android:button="@null"
            app:layout_constraintTop_toBottomOf="@id/title_6" />

        <TextView
            android:id="@+id/title_7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/drawablePadding_15"
            android:paddingTop="@dimen/drawablePadding_10"
            android:text="确定密码"
            android:textColor="@color/c000000"
            android:textSize="@dimen/text_size_16"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/c_passwords"
            tools:ignore="MissingConstraints" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/image_sees"
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:layout_marginTop="@dimen/drawablePadding_10"
            android:layout_marginRight="20dp"
            android:background="@mipmap/passwords"
            android:textColor="@color/c333333"
            android:textSize="@dimen/text_size_16"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/c_passwords"
            app:layout_constraintTop_toTopOf="@id/title_7" />

        <ImageView
            android:id="@+id/title_8"
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:layout_marginTop="@dimen/drawablePadding_10"
            android:layout_marginRight="20dp"
            android:background="@mipmap/password"
            android:textColor="@color/c333333"
            android:textSize="@dimen/text_size_16"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/c_passwords"
            app:layout_constraintTop_toTopOf="@id/title_7" />

        <EditText
            android:id="@+id/c_user_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:singleLine="true"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/title_8" />

        <TextView

            android:id="@+id/c_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="35dp"
            android:text="注册"
            android:textColor="@color/c2C6CFD"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintTop_toBottomOf="@id/c_user_password"
            tools:ignore="MissingConstraints" />

        <TextView

            android:id="@+id/c_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="35dp"
            android:text="密码登录"
            android:textColor="@color/c2C6CFD"
            android:textSize="@dimen/text_size_15"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/c_user_password" />


        <Button
            android:id="@+id/c_login_button"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/shape_red"
            android:gravity="center"
            android:src="@drawable/shape"
            android:text="登录"
            android:textColor="@color/cffffff"
            android:textSize="@dimen/text_size_18"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/c_register"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/c_wechat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="46dp"
            android:background="@mipmap/wechat"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/qq"
            app:layout_constraintTop_toBottomOf="@id/c_login_button" />

        <ImageView
            android:id="@+id/qq"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="46dp"
            android:background="@mipmap/qq"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintLeft_toRightOf="@id/c_wechat"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/c_login_button" />

        <ImageView
            android:id="@+id/alipay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="46dp"
            android:background="@mipmap/aliapy"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@id/qq"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/c_login_button" />


        <ImageView
            android:id="@+id/select"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="@dimen/padding_15"
            android:background="@mipmap/select"
            android:visibility="gone"
            app:layout_constraintEnd_toStartOf="@id/user_message"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/c_login_button" />


        <TextView
            android:id="@+id/user_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_15"
            android:text="《用户注册协议》"
            android:textColor="@color/cff4347fa"
            android:textSize="@dimen/text_size_13"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"

            app:layout_constraintTop_toBottomOf="@id/c_login_button" />
    </android.support.constraint.ConstraintLayout>
</LinearLayout>
</android.support.v4.widget.NestedScrollView>
</android.support.constraint.ConstraintLayout>