<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <ImageView
        android:layout_below="@id/vb_mian_show"
        android:scaleType="fitXY"
        android:id="@+id/my_background"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@mipmap/user_background" />

    <ImageView

        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/marginRight_16"
        android:layout_marginTop="@dimen/paddingTop_40"
        android:background="@mipmap/setting" />

    <com.example.hemin.fnb.ui.util.CircleImageView
        android:scaleType="fitXY"
        android:id="@+id/user_logo"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/my_background"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/user_logo"
        app:layout_constraintTop_toBottomOf="@id/my_background" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:paddingTop="5dp"
        android:text="登陆/注册"
        android:textColor="@color/c333333"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/qm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:paddingTop="5dp"
        android:text="填写签名让更多藏友认识你"
        android:textColor="@color/c333333" />

    <include
        layout="@layout/my_function"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/qm"
        android:layout_marginTop="30dp" />
</RelativeLayout>