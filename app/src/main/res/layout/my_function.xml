<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:id="@+id/card_1"
        android:layout_width="0dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/card_2"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="80dp"
        >
        <TextView
            android:visibility="gone"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="18dp"
            android:layout_gravity="center"
            android:textColor="@color/cE91C1C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"/>
   <ImageView
       android:layout_marginTop="20dp"
       android:layout_gravity="top|center"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:background="@mipmap/collection"/>
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textColor="@color/c333333"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_2"
        android:layout_margin="15dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/card_1"
        app:layout_constraintRight_toLeftOf="@id/card_3"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="80dp"
        >
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="top|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/magnifier"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="我的鉴定"
            android:textColor="@color/c333333"
            android:textSize="15sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_3"
        android:layout_margin="15dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintLeft_toRightOf="@id/card_2"
        app:layout_constraintRight_toRightOf="parent"
       >
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="top|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/circle"/>
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textColor="@color/c333333"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的圈子"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/card_4"
        android:layout_width="0dp"
        android:layout_margin="15dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_1"
        app:layout_constraintRight_toLeftOf="@id/card_5"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="80dp"
        >
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="top|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/order"/>
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textColor="@color/c333333"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/card_5"
        android:layout_margin="15dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/card_4"
        app:layout_constraintRight_toLeftOf="@id/card_6"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        >
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="top|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/circle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="我的圈子"
            android:textColor="@color/c333333"
            android:textSize="15sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/card_6"
        android:layout_margin="15dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@id/card_3"
        app:layout_constraintLeft_toRightOf="@id/card_5"
        app:layout_constraintRight_toRightOf="parent"
        >
        <ImageView
            android:layout_marginTop="20dp"
            android:layout_gravity="top|center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/authentication"/>
        <TextView
            android:layout_marginTop="20dp"
            android:textSize="15sp"
            android:textColor="@color/c333333"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="实名认证"/>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>