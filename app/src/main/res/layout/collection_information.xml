<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    android:layout_margin="15dp"
    android:layout_height="match_parent">

    <TextView

        android:id="@+id/title1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="藏品分类"
        android:textSize="@dimen/text_size_15"
        android:textStyle="bold"
        android:textColor="@color/c333333"
      />

    <TextView
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/c333333"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="硬币"/>
    
    
    <ImageView
        android:id="@+id/ci_image"
        android:background="@mipmap/yb"
        android:layout_marginTop="@dimen/marginTop_20"
        app:layout_constraintTop_toBottomOf="@id/title1"
        android:layout_width="82dp"
        android:layout_height="82dp" />
    <TextView
        android:textStyle="bold"
        android:id="@+id/title2"
        app:layout_constraintTop_toBottomOf="@id/title1"
        android:textSize="18sp"
        android:textColor="@color/c333333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="宝贝描述:"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/ci_image"
        app:layout_constraintLeft_toRightOf="@id/ci_image"/>
    <TextView
        android:layout_marginLeft="@dimen/marginLeft_20"
        app:layout_constraintLeft_toRightOf="@id/ci_image"
        app:layout_constraintTop_toBottomOf="@id/title2"
         android:maxLines="3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="高0.3厘米，宽3.2厘米，硬币表面有
一些常年抚摸留下的包浆和些微划伤，
但并不严重，之前都是放在一些……"/>
    <View
        android:id="@+id/view1"
        android:layout_marginTop="@dimen/paddingTop_10"
        app:layout_constraintTop_toBottomOf="@id/ci_image"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/cEEEEEE"/>

    <TextView
        android:id="@+id/title3"
        android:layout_marginTop="@dimen/paddingTop_10"
        app:layout_constraintTop_toBottomOf="@id/view1"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/c000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="鉴定流程"/>


    <ImageView

        android:id="@+id/step_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_50"
        android:layout_marginTop="8dp"
        android:background="@mipmap/step_2"
        app:layout_constraintTop_toBottomOf="@id/title3"
        />

    <View
        android:id="@+id/view2"
        android:layout_marginTop="@dimen/paddingTop_10"
        app:layout_constraintTop_toBottomOf="@id/step_2"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/cEEEEEE"/>

    <TextView
        android:id="@+id/title4"
        android:layout_marginTop="@dimen/paddingTop_10"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:textSize="20sp"
       app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/marginLeft_10"
        android:textColor="@color/c000000"
        android:text="审核结果"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="@dimen/paddingTop_30"
        app:layout_constraintTop_toBottomOf="@id/title4"
        android:id="@+id/pc_step_1"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/marginLeft_10"
        android:layout_width="93dp"
        android:layout_height="88dp"
        android:background="@mipmap/pc_step_1"/>


    <ImageView
        android:layout_marginTop="@dimen/paddingTop_30"
        app:layout_constraintTop_toBottomOf="@id/pc_step_1"
        android:id="@+id/pc_step_2"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/marginLeft_10"
        android:layout_width="93dp"
        android:layout_height="88dp"
        android:background="@mipmap/pc_step_2"/>

    <ImageView
        android:layout_marginTop="@dimen/paddingTop_30"
        app:layout_constraintTop_toBottomOf="@id/pc_step_2"
        android:id="@+id/pc_step_3"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/marginLeft_10"
        android:layout_width="93dp"
        android:layout_height="88dp"
        android:background="@mipmap/pc_step_3"/>



    <TextView
        android:layout_marginTop="@dimen/paddingTop_10"
        android:id="@+id/date_one"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/pc_step_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-04-03"/>
    <TextView
        android:id="@+id/date_one_result"
        android:textColor="@color/c000000"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="图片已审核"/>
  <ImageView
      android:layout_marginRight="@dimen/paddingRight_20"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@id/date_one_result"
      android:background="@mipmap/pc_result"
      android:layout_width="82dp"
      android:layout_height="82dp" />



    <TextView
        android:layout_marginTop="@dimen/paddingTop_10"
        android:id="@+id/date_two"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/pc_step_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-04-03"/>
    <TextView
        android:id="@+id/date_two_result"
        android:textColor="@color/c000000"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="专家正在鉴定"/>



    <TextView
        android:layout_marginTop="@dimen/paddingTop_10"
        android:id="@+id/date_three"
        android:textSize="@dimen/text_size_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/pc_step_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2019-04-03"/>
    <TextView
        android:id="@+id/date_three_result"
        android:textColor="@color/c000000"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="鉴定结束"/>





</android.support.constraint.ConstraintLayout>