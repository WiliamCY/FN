<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    tools:context=".ui.activity.OrderActivity">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/c_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_150"
        android:background="@color/c313131"
    >
    <TextView
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/or_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收货人：巴拉拉    "
        android:textStyle="bold"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/cffffff"/>

        <TextView
            android:id="@+id/or_address"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/paddingTop_10"
            app:layout_constraintTop_toBottomOf="@id/or_user"
            android:textColor="@color/cffffff"
            android:text="浙江省宁波市海曙"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20"/>

   <ImageView
       android:layout_marginTop="@dimen/paddingTop_7"
       android:layout_marginRight="@dimen/paddingRight_20"
       app:layout_constraintRight_toRightOf="parent"
       android:background="@mipmap/right_white"
       android:layout_width="@dimen/layout_width_9"
       android:layout_height="@dimen/layout_height_15"
       app:layout_constraintTop_toTopOf="@+id/or_address"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/care_1"
        app:layout_constraintTop_toBottomOf="@id/c_1"
        app:cardCornerRadius="8dp"
        android:layout_margin="@dimen/margin_15"
        android:layout_width="match_parent"
        android:layout_height="274dp">
        <android.support.constraint.ConstraintLayout
           android:layout_margin="@dimen/margin_15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        <ImageView
            android:id="@+id/or_logo"
            android:background="@mipmap/order_logo"
            android:layout_width="123dp"
            android:layout_height="88dp" />
        <TextView
            android:id="@+id/order_title1"
            android:layout_marginLeft="@dimen/marginLeft_20"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/paddingTop_10"
            app:layout_constraintLeft_toRightOf="@id/or_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="基础鉴定费"
            android:textSize="20sp"
            android:textColor="@color/c000000"/>
            <TextView
                android:layout_marginLeft="@dimen/marginLeft_20"
                app:layout_constraintLeft_toRightOf="@id/or_logo"
                app:layout_constraintTop_toBottomOf="@id/order_title1"
                android:text="￥500"
                android:textColor="@color/cD61616"
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/order_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="某某服务费:"
                android:textColor="@color/c000000"
                android:textSize="@dimen/text_size_15"
                android:layout_marginTop="@dimen/paddingTop_25"
                app:layout_constraintTop_toBottomOf="@id/or_logo"/>
            <TextView
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/order_title2"
                android:text="￥1000"
                android:textColor="@color/cD61616"
                android:textSize="@dimen/text_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/order_title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="配送方式"
                android:textColor="@color/c000000"
                android:textSize="@dimen/text_size_15"
                android:layout_marginTop="@dimen/paddingTop_25"
                app:layout_constraintTop_toBottomOf="@id/order_title2"/>
            <TextView
                android:layout_marginRight="@dimen/paddingRight_5"
                app:layout_constraintEnd_toStartOf="@id/order_right2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15"
                android:text="配送方式   包邮"
                android:textColor="@color/c000000"
                app:layout_constraintTop_toTopOf="@id/order_title3"
                app:layout_constraintRight_toRightOf="parent"/>
            <ImageView

                android:layout_marginTop="@dimen/marginTop_5"
                android:id="@+id/order_right2"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/order_title3"
                android:layout_width="@dimen/layout_width_10"
                android:layout_height="@dimen/layout_height_10"
                android:background="@mipmap/right"/>

            <TextView
                android:id="@+id/order_title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="发票："
                android:textColor="@color/c000000"
                android:textSize="@dimen/text_size_15"
                android:layout_marginTop="@dimen/paddingTop_25"
                app:layout_constraintTop_toBottomOf="@id/order_title3"/>
            <TextView
                android:layout_marginRight="@dimen/paddingRight_5"
                app:layout_constraintEnd_toStartOf="@id/order_right2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15"
                android:text="无"
                android:textColor="@color/c000000"
                app:layout_constraintTop_toTopOf="@id/order_title4"
                app:layout_constraintRight_toRightOf="parent"/>
            <ImageView

                android:layout_marginTop="@dimen/marginTop_5"
                android:id="@+id/order_right3"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/order_title4"
                android:layout_width="@dimen/layout_width_10"
                android:layout_height="@dimen/layout_height_10"
                android:background="@mipmap/right"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <TextView
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/paddingRight_20"
        android:layout_marginTop="@dimen/paddingTop_30"
        app:layout_constraintTop_toBottomOf="@id/care_1"
        android:textSize="@dimen/text_size_14"
        android:textColor="@color/c999999"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="证书收费标准:"/>


    <View
        android:id="@+id/view2"
        android:layout_marginBottom="@dimen/layout_height_55"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/order_number"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="@dimen/marginLeft_20"
        android:layout_marginTop="@dimen/marginTop_15"
        app:layout_constraintTop_toBottomOf="@id/view2"
        android:textSize="@dimen/text_size_15"
        android:textColor="@color/c000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="共2项"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c000000"
        android:textSize="@dimen/text_size_15"
        android:text="合计："
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/order_number"
        app:layout_constraintEnd_toStartOf="@id/order_numbers"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/order_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cD71F1F"
        android:textSize="@dimen/text_size_15"
        android:text="￥1500"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/order_number"
        android:textStyle="bold"/>

    <TextView
        android:gravity="center"
        android:textSize="@dimen/text_size_15"
        android:textStyle="bold"
        android:textColor="@color/cffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="144dp"
        android:layout_height="55dp"
        android:text="确定支付"
        android:background="@color/cD61616"/>

</android.support.constraint.ConstraintLayout>