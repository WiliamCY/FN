<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="232dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints"
    android:layout_margin="@dimen/margin_15">

    <ImageView
        android:id="@+id/collect_logo"
        android:layout_width="167dp"
        android:layout_height="144dp"
        android:background="@mipmap/collect_logo"
        />
    <android.support.constraint.ConstraintLayout

        android:background="@color/cEEEEEE"
        app:layout_constraintTop_toBottomOf="@id/collect_logo"
        android:layout_width="167dp"
        android:layout_height="88dp">
        <ImageView
            android:visibility="gone"
            android:id="@+id/TextView1"
            android:layout_width="20dp"
            android:background="@mipmap/appraisals_one"
            android:layout_height="@dimen/layout_height_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/TextView2" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/TextView2"
            android:background="@mipmap/appraisals_two"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:layout_constraintLeft_toRightOf="@+id/TextView1"
            app:layout_constraintRight_toLeftOf="@+id/TextView3"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/TextView3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/appraisals_three"
            app:layout_constraintLeft_toRightOf="@+id/TextView2"
            app:layout_constraintRight_toLeftOf="@+id/TextView4"
            app:layout_constraintRight_toRightOf="parent" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/TextView4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/appraisals_four"
            app:layout_constraintLeft_toRightOf="@+id/TextView3"
            app:layout_constraintRight_toRightOf="parent" />
       <TextView

           android:textColor="@color/c333333"
           android:id="@+id/title1"
          app:layout_constraintTop_toBottomOf="@id/TextView1"
           android:layout_marginTop="@dimen/paddingTop_5"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="@dimen/text_size_12"
           android:text="鉴定单号：12345678"/>

        <TextView
            android:layout_marginTop="@dimen/paddingTop_10"
            android:textColor="@color/c333333"
            android:id="@+id/title2"
            app:layout_constraintTop_toBottomOf="@id/title1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            android:text="状态：鉴定中"/>


        <TextView
            android:layout_marginTop="@dimen/paddingTop_10"
            android:textColor="@color/c333333"
            android:id="@+id/title3"
            app:layout_constraintTop_toBottomOf="@id/title2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_12"
            android:text="提交时间：2019-05-15"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>